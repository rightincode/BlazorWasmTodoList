@page "/todo"
@inject HttpClient httpClient

<h3>Todo (@todos.Count(todo => !todo.Completed))</h3>

<ul>
    @foreach (var todo in todos)
    {
        <li>
            <input type="checkbox" @bind="todo.Completed" />
            <input @bind="todo.Name" />
        </li>
    }
</ul>

<input placeholder="Something todo" @bind="newTodo" />
